{
  "compilerOptions": {
    // File Layout (opcional)
    // "rootDir": "./src",
    // "outDir": "./dist",
    // Ambiente / Módulos
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    // Tipos
    "types": [
      "node"
    ],
    // Outras saídas
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Checagens
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    // Estilo / ESM
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Paths (se usar @/… com loader; senão, mantenha imports relativos)
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}